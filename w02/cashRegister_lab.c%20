#define _CRT_SECURE_NO_WARNINGS

// Start your code below:

#include <stdio.h>
int main(void) {

	double amount;
	int Loonies;
	int Quarters;
	float balance;
	    printf("Please enter the amount to be paid: $");
	    scanf("%lf", &amount);
		Loonies = (int)amount;
		balance = amount - (float)Loonies;
	    printf("Loonies required: %d, balance owing $%.2lf\n", Loonies, balance);
		Quarters = (balance*100) / 25;
		balance = (int)(balance*100) % 25;
        printf("Quarters required: %d, balance owing $%.2lf\n", Quarters, balance/100);
		
		
		
		




	return 0;
}